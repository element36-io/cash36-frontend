{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "expect": "writable",
    "test": "writable",
    "jest": "writable",
    "describe": "writable",
    "beforeEach": "writable",
    "afterEach": "writable",
    "process": "writable"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "react/no-unescaped-entities": "off",
    "no-console": "off",
    "react-hooks/rules-of-hooks": "error",
    "react/prop-types": [
      1,
      {
        "ignore": ["className", "children", "location", "params", "location*"]
      }
    ]
  }
}
